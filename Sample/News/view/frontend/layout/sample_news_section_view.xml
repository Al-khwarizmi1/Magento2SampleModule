<page layout="2columns-left"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../Magento/Core/etc/page.xsd">
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Css" name="sample-news-sections-css">
            <arguments>
                <argument name="file" xsi:type="string">Sample_News::css/styles.css</argument>
            </arguments>
        </block>
        <block class="Magento\Theme\Block\Html\Head\Css" ifconfig="sample_news/section/tree" name="sample-news-tree-css">
            <arguments>
                <argument name="file" xsi:type="string">Sample_News::css/tree.css</argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Sample\News\Block\Section\ViewSection" template="Sample_News::section/view.phtml" />
        <block class="Sample\News\Block\Section\ViewSection\ChildSections" template="Sample_News::section/view/child_sections.phtml" />
        <block class="Sample\News\Block\Section\Catalog\Product" template="Sample_News::section/catalog/product.phtml" />
        <block class="Sample\News\Block\Section\Catalog\Category" template="Sample_News::section/catalog/category.phtml" />
        <block class="Sample\News\Block\Section\ViewSection\Article" template="Sample_News::section/view/article.phtml" />
    </referenceContainer>
</page>