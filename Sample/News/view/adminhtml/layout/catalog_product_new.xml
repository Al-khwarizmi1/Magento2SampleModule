<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../Magento/Core/etc/page.xsd">
    <referenceContainer name="content">
        <block class="Sample\News\Block\Adminhtml\Helper\NewSection" name="new-section" template="Sample_News::helper/section/new.phtml"/>
    </referenceContainer>
    <referenceBlock name="product_tabs">
        <block class="Sample\News\Block\Adminhtml\Catalog\Product\Edit\Tab\Article" name="sample_news.article" />
        <action method="addTab">
            <argument name="name" xsi:type="string">sample-news-article</argument>
            <argument name="block" xsi:type="string">sample_news.article</argument>
        </action>

        <block class="Sample\News\Block\Adminhtml\Catalog\Product\Edit\Tab\Section" name="sample_news.section" />
        <action method="addTab">
            <argument name="name" xsi:type="string">sample-news-section</argument>
            <argument name="block" xsi:type="string">sample_news.section</argument>
        </action>
    </referenceBlock>
</page>
