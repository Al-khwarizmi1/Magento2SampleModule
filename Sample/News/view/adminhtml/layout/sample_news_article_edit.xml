<page layout="admin-2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../Magento/Core/etc/page.xsd">
    <update handle="editor"/>
    <referenceBlock name="head">
        <block class="Magento\Theme\Block\Html\Head\Css" name="magento-adminhtml-catalog-category-selector-css">
            <arguments>
                <argument name="file" xsi:type="string">Magento_Catalog::catalog/category-selector.css</argument>
            </arguments>
        </block>
    </referenceBlock>
    <referenceContainer name="content">
        <block class="Sample\News\Block\Adminhtml\Article\Edit" name="sample_news_article_edit"/>
        <block class="Magento\Catalog\Block\Adminhtml\Product\Edit\NewCategory" name="new-category" template="Magento_Catalog::catalog/product/edit/category/new/form.phtml"/>
        <block class="Sample\News\Block\Adminhtml\Helper\NewSection" name="new-section" template="Sample_News::helper/section/new.phtml"/>
    </referenceContainer>
    <referenceContainer name="left">
        <block class="Sample\News\Block\Adminhtml\Article\Edit\Tabs" name="sample_news_article_tabs">
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Article" name="sample_news_edit_tab_article"/>
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Meta" name="sample_news_edit_tab_article_meta"/>
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Stores" name="sample_news_edit_tab_article_stores"/>
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Product" name="sample_news_edit_tab_article_product"/>
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Category" name="sample_news_edit_tab_article_category"/>
            <block class="Sample\News\Block\Adminhtml\Article\Edit\Tab\Section" name="sample_news_edit_tab_article_section"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">article_section</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">meta_section</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article_meta</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">stores_section</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article_stores</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">products</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article_product</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">categories</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article_category</argument>
            </action>
            <action method="addTab">
                <argument name="name" xsi:type="string">sections</argument>
                <argument name="block" xsi:type="string">sample_news_edit_tab_article_section</argument>
            </action>
        </block>
    </referenceContainer>
</page>
